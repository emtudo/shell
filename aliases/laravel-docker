#!/bin/sh
laradocker () {
  DOCKER="docker-compose exec "
  DOCKER="docker exec -it"
  CONTAINER=${1:-workspace}
  #if test "$status" == "workspace"
  #then
  #  CONTAINER=$(docker ps | grep -i $CONTAINER  | head -n 1 | grep -o "[^ ]*$" | grep -o "[^ ]*")
  #  DOCKER="docker exec -it"
  #fi

  echo "CONTAINER: $CONTAINER"
  alias art="$DOCKER $CONTAINER php artisan"
  alias artisan="$DOCKER $CONTAINER php artisan"
  alias migrate="$DOCKER $CONTAINER php artisan migrate"
  alias migrate:fresh="$DOCKER $CONTAINER php artisan migrate:fresh"
  alias migrate:refresh="$DOCKER $CONTAINER php artisan migrate:refresh"
  alias migrate:rollback="$DOCKER $CONTAINER php artisan migrate:rollback"
  alias refresh="$DOCKER $CONTAINER php artisan migrate:refresh â€”seed"
  alias rollback="$DOCKER $CONTAINER php artisan migrate:rollback"
  alias fresh="$DOCKER $CONTAINER php artisan migrate:fresh"
  alias monitor:queries="$DOCKER $CONTAINER php artisan monitor:queries"
  alias monitor:laravel="$DOCKER $CONTAINER php artisan monitor:laravel"
  alias queries="$DOCKER $CONTAINER php artisan monitor:queries"
  alias tinker="$DOCKER $CONTAINER php artisan tinker"
  alias route:list="$DOCKER $CONTAINER php artisan route:list"
  alias migrator="$DOCKER $CONTAINER php artisan migrator"
  alias migrator:rollback="$DOCKER $CONTAINER php artisan migrator:rollback"
  alias migrator:fresh="$DOCKER $CONTAINER php artisan migrator:fresh"
  alias queue='$DOCKER $CONTAINER php artisan queue:work --timeout=0 --tries=3'
  alias composer='$DOCKER $CONTAINER composer'

  # nova
  alias nova:action="$DOCKER $CONTAINER php artisan nova:action"
  alias nova:asset="$DOCKER $CONTAINER php artisan nova:asset"
  alias nova:base-resource="$DOCKER $CONTAINER php artisan nova:base-resource"
  alias nova:card="$DOCKER $CONTAINER php artisan nova:card"
  alias nova:field="$DOCKER $CONTAINER php artisan nova:field"
  alias nova:filter="$DOCKER $CONTAINER php artisan nova:filter"
  alias nova:install="$DOCKER $CONTAINER php artisan nova:install"
  alias nova:lens="$DOCKER $CONTAINER php artisan nova:lens"
  alias nova:partition="$DOCKER $CONTAINER php artisan nova:partition"
  alias nova:publish="$DOCKER $CONTAINER php artisan nova:publish"
  alias nova:resource="$DOCKER $CONTAINER php artisan nova:resource"
  alias nova:resource-tool="$DOCKER $CONTAINER php artisan nova:resource-tool"
  alias nova:theme="$DOCKER $CONTAINER php artisan nova:theme"
  alias nova:tool="$DOCKER $CONTAINER php artisan nova:tool"
  alias nova:trend="$DOCKER $CONTAINER php artisan nova:trend"
  alias nova:user="$DOCKER $CONTAINER php artisan nova:user"
  alias nova:value="$DOCKER $CONTAINER php artisan nova:value"
}

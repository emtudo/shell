#!/bin/sh
laradocker () {
  CONTAINER=$(docker ps | grep -i ${1:-workspace}  | head -n 1 | grep -o "[^ ]*$" | grep -o "[^ ]*")

  echo "CONTAINER: $CONTAINER"
  alias art="docker exec -it $CONTAINER php artisan"
  alias artisan="docker exec -it $CONTAINER php artisan"
  alias migrate="docker exec -it $CONTAINER php artisan migrate"
  alias migrate:fresh="docker exec -it $CONTAINER php artisan migrate:fresh"
  alias migrate:refresh="docker exec -it $CONTAINER php artisan migrate:refresh"
  alias migrate:rollback="docker exec -it $CONTAINER php artisan migrate:rollback"
  alias refresh="docker exec -it $CONTAINER php artisan migrate:refresh â€”seed"
  alias rollback="docker exec -it $CONTAINER php artisan migrate:rollback"
  alias fresh="docker exec -it $CONTAINER php artisan migrate:fresh"
  alias monitor:queries="docker exec -it $CONTAINER php artisan monitor:queries"
  alias monitor:laravel="docker exec -it $CONTAINER php artisan monitor:laravel"
  alias queries="docker exec -it $CONTAINER php artisan monitor:queries"
  alias tinker="docker exec -it $CONTAINER php artisan tinker"
  alias route:list="docker exec -it $CONTAINER php artisan route:list"
  alias migrator="docker exec -it $CONTAINER php artisan migrator"
  alias migrator:rollback="docker exec -it $CONTAINER php artisan migrator:rollback"
  alias migrator:fresh="docker exec -it $CONTAINER php artisan migrator:fresh"
  
  # nova
  alias nova:action="docker exec -it $CONTAINER php artisan nova:action"
  alias nova:asset="docker exec -it $CONTAINER php artisan nova:asset"
  alias nova:base-resource="docker exec -it $CONTAINER php artisan nova:base-resource"
  alias nova:card="docker exec -it $CONTAINER php artisan nova:card"
  alias nova:field="docker exec -it $CONTAINER php artisan nova:field"
  alias nova:filter="docker exec -it $CONTAINER php artisan nova:filter"
  alias nova:install="docker exec -it $CONTAINER php artisan nova:install"
  alias nova:lens="docker exec -it $CONTAINER php artisan nova:lens"
  alias nova:partition="docker exec -it $CONTAINER php artisan nova:partition"
  alias nova:publish="docker exec -it $CONTAINER php artisan nova:publish"
  alias nova:resource="docker exec -it $CONTAINER php artisan nova:resource"
  alias nova:resource-tool="docker exec -it $CONTAINER php artisan nova:resource-tool"
  alias nova:theme="docker exec -it $CONTAINER php artisan nova:theme"
  alias nova:tool="docker exec -it $CONTAINER php artisan nova:tool"
  alias nova:trend="docker exec -it $CONTAINER php artisan nova:trend"
  alias nova:user="docker exec -it $CONTAINER php artisan nova:user"
  alias nova:value="docker exec -it $CONTAINER php artisan nova:value"
}

#!/bin/sh
laradocker () {
	CONTAINER=${1:-workspace}

	echo "CONTAINER: $CONTAINER"
	alias art="docker-compose exec $CONTAINER php artisan"
	alias artisan="docker-compose exec $CONTAINER php artisan"
	alias migrate="docker-compose exec $CONTAINER php artisan migrate"
	alias migrate:fresh="docker-compose exec $CONTAINER php artisan migrate:fresh"
	alias migrate:refresh="docker-compose exec $CONTAINER php artisan migrate:refresh"
	alias migrate:rollback="docker-compose exec $CONTAINER php artisan migrate:rollback"
	alias refresh="docker-compose exec $CONTAINER php artisan migrator:refresh â€”seed"
	alias rollback="docker-compose exec $CONTAINER php artisan migrator:rollback"
	alias monitor:queries="docker-compose exec $CONTAINER php artisan monitor:queries"
	alias monitor:laravel="docker-compose exec $CONTAINER php artisan monitor:laravel"
	alias queries="docker-compose exec $CONTAINER php artisan monitor:queries"
	alias tinker="docker-compose exec $CONTAINER php artisan tinker"
	alias route:list="docker-compose exec $CONTAINER php artisan route:list"
	alias migrator="docker-compose exec $CONTAINER php artisan migrator"
	alias migrator:rollback="docker-compose exec $CONTAINER php artisan migrator:rollback"
	alias migrator:fresh="docker-compose exec $CONTAINER php artisan migrator:fresh"
	alias fresh="docker-compose exec $CONTAINER php artisan migrator:fresh"

	# nova
	alias nova:action="docker-compose exec $CONTAINER php artisan nova:action"
	alias nova:asset="docker-compose exec $CONTAINER php artisan nova:asset"
	alias nova:base-resource="docker-compose exec $CONTAINER php artisan nova:base-resource"
	alias nova:card="docker-compose exec $CONTAINER php artisan nova:card"
	alias nova:field="docker-compose exec $CONTAINER php artisan nova:field"
	alias nova:filter="docker-compose exec $CONTAINER php artisan nova:filter"
	alias nova:install="docker-compose exec $CONTAINER php artisan nova:install"
	alias nova:lens="docker-compose exec $CONTAINER php artisan nova:lens"
	alias nova:partition="docker-compose exec $CONTAINER php artisan nova:partition"
	alias nova:publish="docker-compose exec $CONTAINER php artisan nova:publish"
	alias nova:resource="docker-compose exec $CONTAINER php artisan nova:resource"
	alias nova:resource-tool="docker-compose exec $CONTAINER php artisan nova:resource-tool"
	alias nova:theme="docker-compose exec $CONTAINER php artisan nova:theme"
	alias nova:tool="docker-compose exec $CONTAINER php artisan nova:tool"
	alias nova:trend="docker-compose exec $CONTAINER php artisan nova:trend"
	alias nova:user="docker-compose exec $CONTAINER php artisan nova:user"
	alias nova:value="docker-compose exec $CONTAINER php artisan nova:value"
}
